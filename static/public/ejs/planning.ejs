<head>
    <link rel="stylesheet/less" type="text/css" href="../css/planning.less" />
</head>

<% if (locals.payload){ %>
    <h2>Mon planning de <%= payload %></h2>
<% } else { %>
<h2>Mon Planning</h2>
<% } %>

<div class="container-select">
    <div class="dropdown">
        <button type="submit">
            <% if (locals.payload){ %>
                <%= payload %>
            <% } else { %>
            Jour
            <% } %>
        </button>
        <ul class="dropdown-options" >
         <li class="option">
            <form action="/planning/LUNDI" method="post">
               <input class="input-payload" type="submit" name="payload" value="LUNDI" />
           </form>
         </li>
         <li class="option">
            <form action="/planning/MARDI" method="post">
               <input class="input-payload" type="submit" name="payload" value="MARDI" />
           </form>
         </li>
         <li class="option">
            <form action="/planning/MERCREDI" method="post">
               <input class="input-payload" type="submit" name="payload" value="MERCREDI" />
           </form>
         </li>
         <li class="option">
            <form action="/planning/JEUDI" method="post">
               <input class="input-payload" type="submit" name="payload" value="JEUDI" />
           </form>
         </li>
         <li class="option">
            <form action="/planning/VENDREDI" method="post">
               <input class="input-payload" type="submit" name="payload" value="VENDREDI" />
           </form>
         </li>
         <li class="option">
            <form action="/planning/TOUT" method="post">
               <input class="input-payload" type="submit" name="payload" value="TOUT" />
           </form>
         </li>
       </ul>
    </div>
 </div>

 <!-- Timetable -->
 <% if (locals.timetable) { %>
    <table class="timetable">
        <tr>
            <th>Matin</th>
            <th>Apr√®s-midi</th>
        </tr>
        <tr>
            <td><pre><%= timetable[0].replace(/,/g, '') %></pre></td>
            <td><pre><%= timetable[1].replace(/,/g, '') %></pre></td>
        </tr>
    </table>
<% } %>

